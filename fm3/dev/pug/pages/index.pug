extends ../layouts/main

block variables
  -var title = 'Главная страница'


block content
  .container
    .main
      .text
        h1 Learn to code by watching others
        p See how experienced developers solve problems in real-time. Watching scripted tutorials is great, but understanding how developers think is invaluable.
      .form-wrapper
        .form-title
          span.form-title__text #[b Try it free 7 days] then $20/mo. thereafter
        .form
          form(novalidate)
            label
              input(type="text" name="firstName"  placeholder="First Name")
              img(src="static/img/common/icon-error.svg" alt='icon')
              span.error-text First Name cannot be empty

            label
              input(type="text" name="lastName"  placeholder="Last Name")
              img(src="static/img/common/icon-error.svg" alt='icon')
              span.error-text Last Name cannot be empty

            label
              input(type="email" name="email"  placeholder="Email Address")
              img(src="static/img/common/icon-error.svg" alt='icon')
              span.error-text Looks like this is not an email

            label
              input(type="password"  name="password" placeholder="Password")
              img(src="static/img/common/icon-error.svg" alt='icon')
              span.error-text Password cannot be empty

            button(type="submit") CLAIM YOUR FREE TRIAL

          .form-agree
            span.form-agree__text By clicking the button, you are agreeing to our #[a(href="www.google.com") Terms and Services]
